library IEEE;
use IEEE.STD_LOGIC_1164.ALL;
use IEEE.numeric_std.ALL;

entity Number_Display is
port(
	clk : in STD_LOGIC;
	number_in : in unsigned(3 downto 0);
	number_out : out STD_LOGIC_VECTOR(7 downto 0)
);
end Number_Display;

architecture bhv of Number_Display is

begin

	case Number_in is
	when "0000" => number_out <= X"6D";
	when "0001" => number_out <= X"6D";
	when "0010" => number_out <= X"6D";
	when "0011" => number_out <= X"6D";
	when "0100" => number_out <= X"6D";
	when "0101" => number_out <= X"6D";
	when "0110" => number_out <= X"6D";
	when "0111" => number_out <= X"6D";
	when "1000" => number_out <= X"6D";
	when "1001" => number_out <= X"6D";
	when others => number_out <= X"00";
	end case;

end bhv;